  <%= form_for Post.new, :remote => true do |f| %>
    <div class="form-group">
      <%= f.text_area :content, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  <% end %>

<div id="post-list">
<% @posts.each do |post| %>
  <%= render :partial => "post", :locals => { :post => post } %>
      <% end %>
</div>
